<h1>New Customer</h1>

<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br><br>

  <%= f.label :phone %>
  <%= f.text_field :phone %><br><br>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %><br><br>

  <%= f.label :smoker %><br>
  <%{'Y': 'Yes', 'N': 'No'}.each do |key, value|%>
    <%= f.radio_button :smoker, key %><%=value%><br><br>
  <%end%>

  <%= f.submit 'Create Account'%>

<% end %>